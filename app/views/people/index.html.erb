<h1>Personer:</h1>


<%= link_to 'Lägg till ny person', new_person_path %>


<%= form_tag(people_path, :method => "get", id: "search-form") do %>

  <%= select_tag :search_by, options_for_select(['Namn','Personnummer','Lånekortsnummer','Forskarskåp']) %>

  <%= text_field_tag :search, params[:search], placeholder: "Sök" %>
  <%= submit_tag "Search" %>
<% end %>


<table>
  <tr>
    <th>Namn</th>
    <th>Personnummer</th>
    <th>Kortnummer</th>
  </tr>
 
  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.personnbr %></td>
      <td><%= person.cardnbr %></td>
      <td><%= link_to 'Visa', person_path(person) %></td>
      <td><%= link_to 'Ändra', edit_person_path(person) %></td>
      <td><%= link_to 'Ta bort', person_path(person),
              method: :delete,
              data: { confirm: 'Bekräfta borttagning' } %></td>
    </tr>
  <% end %>
</table>