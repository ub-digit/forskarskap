<div id = "personal_info">

  <p>
    <strong>Namn:</strong>
    <%= @selected.name %>
  </p>

  <p>
    <strong>Personnummer:</strong>
    <%= @selected.personnbr %>
  </p>

  <p>
    <strong>Lånekortsnummer:</strong>
    <%= @selected.cardnbr %>
  </p>

  <p>
    <strong>Inskrivningsdatum:</strong>
    <%= @selected.registrationDate %>
  </p>


  <p>
    <% if @selected.locker_id %>

      <strong>Locker:</strong>
      <%= @selectedLocker.number %>

    <% else %>
      <strong> Denna användare har inte ett forskarskåp</strong>
    <% end %>
  </p>
  
  <p>
    <strong>Totalt antal besök:</strong>
    <%= @nbrOfVisits %>
  </p>
  
  <p> 
    <strong> Antal besök denna månaden </strong>
    (Räknat från <%= @countingFrom %>): 
    <%= @visitsThisMonth %>
  </p>
  

  
</div>

<div id = "visits_info">
  
  <table id = "visits_table">
    <tr>
      <th class="visits">Besök:</th>
    </tr>

    <% @selected.visits.each do |visit| %>
      <tr>
        <td><%= visit.date %></td>
      </tr>
    <% end %>
  </table>

</div>

<%= link_to 'Ta bort', person_path(@selected),
              method: :delete,
              data: { confirm: 'Bekräfta borttagning' } %> |

<%= link_to 'Ändra', edit_person_path(@selected)%>