<h1 id = "checkin_title" > Håll upp ditt lånekort för läsaren </h1>

<div id="ub-autologin-menu-page-mkiosk"></div>
  
<div id = "message_area">
    
  <% if @type == "confirmation" %>
    <div id = confirmation> 
      <p id= "msg" > Ditt besök är nu registrerat </p>
    </div>
  <% elsif @type == "redundant" %>
    <div id = redundant> 
      <p id= "msg" > Du har redan registrerat ditt besök för idag </p>
    </div>
  <% elsif @type == "error" %>
    <div id = error> 
      <p id= "msg" > Ett fel uppstod. Vänligen skanna ditt kort igen </p>
    </div>
  <% elsif @type =="noLockerError" %>
    <div id = error> 
      <p id= "msg" > Ett fel uppstod. Du har inte ett forskarskåp registrerat</p>
    </div>
  <% end %>
    
</div>
  
  
<div id = checkin_form >

  <%= form_tag('/visits', :method => "create") do %>
    <%= text_field_tag :cardnbr, params[:cardnbr], placeholder: "Lånekortsnummer", :autofocus=>true %>
    <%= submit_tag "Check in" %>

  <% end %>

</div>